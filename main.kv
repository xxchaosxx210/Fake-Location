#:import MapView kivy.garden.mapview.MapView

<HorizontalSpacer@Widget>:
    size_hint_x: None
    width: "10dp"

<VerticalSpacer@Widget>:
    size_hint_y: None
    height: "10dp"
    size_hint_x: 1

MDBoxLayout:
    orientation: "vertical"

    MDBoxLayout:
        orientation: "horizontal"
        size_hint: 1, .1
        HorizontalSpacer:
        MDTextField:
            id: latitude
            text: "-6.664608"
            hint_text: "Latitude"
            input_filter: "float"
        HorizontalSpacer:
            width: "40dp"
        MDTextField:
            id: longitude
            text: "19.590709"
            hint_text: "Longitude"
            input_filter: "float"
        HorizontalSpacer:

    VerticalSpacer:
        height: "2dp"

    MDBoxLayout:
        orientation: "horizontal"
        size_hint: 1, .1
        padding: "5dp"
        HorizontalSpacer:
            size_hint: .5, 1
        MDFloatingActionButton:
            icon: "crosshairs-gps"
            opposite_colors: True
            elevation: 1
            md_bg_color: 128/255, 204/255, 255/255, 1
            on_release: app.on_get_location()
        HorizontalSpacer:
        MDFloatingActionButton:
            icon: "stop"
            opposite_colors: True
            elevation: 1
            md_bg_color: 200/255, 0, 0, 1
            on_release: app.on_stop_mock()
        HorizontalSpacer:
        MDFloatingActionButton:
            icon: "play"
            opposite_colors: True
            elevation: 1
            md_bg_color: 0, 200/255, 0, 1
            on_release: app.on_start_mock(float(root.ids["latitude"].text), float(root.ids["longitude"].text))
        HorizontalSpacer:
            size_hint: .5, 1

    VerticalSpacer:

    MapView:
        id: map
        size_hint: 1, .8
        lat: 10
        lon: 10
        zoom: 5
        MapMarkerPopup:
            source: "target.png"
            lat: 11
            lon: 11
        
