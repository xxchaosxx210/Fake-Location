#:import MapView kivy.garden.view.MapView

<HorizontalSpacer@Widget>:
    size_hint_x: None
    width: "20dp"

<VerticalSpacer@Widget>:
    size_hint_y: None
    height: "20dp"
    size_hint_x: 1

MDBoxLayout:
    orientation: "vertical"

    MDBoxLayout:
        orientation: "horizontal"
        size_hint: 1, .1
        HorizontalSpacer:
        MDTextField:
            id: latitude
            text: "-6.664608"
            hint_text: "Latitude"
            input_filter: "float"
        HorizontalSpacer:
            width: "40dp"
        MDTextField:
            id: longitude
            text: "19.590709"
            hint_text: "Longitude"
            input_filter: "float"
        HorizontalSpacer:

    VerticalSpacer:

    MDBoxLayout:
        orientation: "horizontal"
        size_hint: 1, .1
        padding: "5dp"
        HorizontalSpacer:
            size_hint: .5, 1
        MDFloatingActionButton:
            icon: "crosshairs-gps"
            opposite_colors: True
            elevation: 1
            md_bg_color: 128/255, 204/255, 255/255, 1
            on_release: app.on_get_location()
        HorizontalSpacer:
        MDFloatingActionButton:
            icon: "stop"
            opposite_colors: True
            elevation: 1
            md_bg_color: 200/255, 0, 0, 1
            on_release: app.on_stop_mock()
        HorizontalSpacer:
        MDFloatingActionButton:
            icon: "play"
            opposite_colors: True
            elevation: 1
            md_bg_color: 0, 200/255, 0, 1
            on_release: app.on_start_mock(float(root.ids["latitude"].text), float(root.ids["longitude"].text))
        HorizontalSpacer:
            size_hint: .5, 1

    VerticalSpacer:

    MapView:
        size_hint: 1, .6
        lat: -6.664608
        lon: 19.590709
        zoom: 5
        on_lat: print("lat", self.lat)
        on_lon: print("lng", self.lon)

    ScrollView:
        size_hint: 1, .2
        canvas.before:
            Color:
                rgba: 230/255, 243/255, 255/255, 1
            Rectangle:
                pos: self.pos
                size: self.size
        MDBoxLayout:
            adaptive_height: True
            padding: "10dp"
            MDLabel:
                text: ""
                id: mock_status
                size_hint_y: None
                height: self.texture_size[1]
    
    VerticalSpacer:
        
