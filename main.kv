MDBoxLayout:
    orientation: "vertical"
    ScrollView:
        size_hint: 1, .4
        canvas.before:
            Color:
                rgba: .7, .7, .7, 1
            Rectangle:
                pos: self.pos
                size: self.size
        MDBoxLayout:
            adaptive_height: True
            padding: "10dp"
            MDLabel:
                text: ""
                id: mock_status
                size_hint_y: None
                height: self.texture_size[1]
    MDBoxLayout:
        orientation: "horizontal"
        size_hint: 1, .6
        spacing: "40dp"
        MDFloatingActionButton:
            pos_hint: {"center_x": .5, "center_y": .5}
            icon: "stop-circle-outline"
            opposite_colors: True
            elevation: 8
            md_bg_color: app.theme_cls.primary_color
            on_release: app.on_stop_fake_location()
        MDFloatingActionButton:
            pos_hint: {"center_x": .5, "center_y": .5}
            icon: "restart"
            opposite_colors: True
            elevation: 8
            md_bg_color: app.theme_cls.primary_color
            on_release: app.on_get_location()
        MDFloatingActionButton:
            pos_hint: {"center_x": .5, "center_y": .5}
            icon: "restart"
            opposite_colors: True
            elevation: 8
            md_bg_color: app.theme_cls.primary_color
            on_release: app.on_start_fake_location()
