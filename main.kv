#:import MapView kivy.garden.mapview.MapView
#:import get_color_from_hex kivy.utils.get_color_from_hex
#:import NoTransition kivy.uix.screenmanager.NoTransition
#:import SearchContent search.SearchContent
#:include mockmapview.kv

<HorizontalSpacer@Widget>:
    size_hint_x: None
    width: "10dp"

<VerticalSpacer@Widget>:
    size_hint_y: None
    height: "10dp"
    size_hint_x: 1

<MapViewToolBarButton@MDRectangleFlatIconButton>:
    theme_text_color: "Custom"
    md_bg_color: get_color_from_hex("#336699")
    text_color: get_color_from_hex("#ECF2F9")

ScreenManager:
    transition: NoTransition()
    MDScreen:
        name: "mapview"
        Container:
            orientation: "vertical"
            mockmapview: map
            lat_text: latitude.text
            lon_text: longitude.text
            id: id_map_screen_container
            
            MDToolbar:
                title: "Search Address"
                right_action_items: [['search-web', app.on_search_button]]
                md_bg_color: app.theme_cls.primary_color

            MDBoxLayout:
                orientation: "horizontal"
                size_hint: 1, .1
                HorizontalSpacer:
                MDTextField:
                    id: latitude
                    text: id_map_screen_container.lat_text
                    hint_text: "Latitude"
                    input_filter: "float"
                HorizontalSpacer:
                    width: "40dp"
                MDTextField:
                    id: longitude
                    text: id_map_screen_container.lon_text
                    hint_text: "Longitude"
                    input_filter: "float"
                HorizontalSpacer:

            RelativeLayout:
                id: mapview_container

                MockMapView:
                    id: map
                    toolbar: map_toolbar
                
                MDBoxLayout:
                    id: map_toolbar
                    orientation: "vertical"
                    size_hint_x: None
                    width: "48dp"
                    size_hint_y: .5
                    pos_hint: {"center_y": .5, "right": 1}
                    canvas.before:
                        Color:
                            rgba: 1, 1, 1, 0
                        Rectangle:
                            size: self.size
                            pos: self.pos
                    MapViewToolBarButton:
                        icon: "crosshairs-gps"
                        on_release: app.on_loc_button_released()
                    MDSeparator:
                    MapViewToolBarButton:
                        icon: "stop"
                        on_release: app.on_stop_mock()
                    MDSeparator:
                    MapViewToolBarButton:
                        icon: "play"
                        on_release: app.on_start_mock()
                    Widget:
                        size_hint_y: None
                        height: "70dp"
                    MapViewToolBarButton:
                        icon: "magnify-plus"
                        on_release: map.on_zoom_button(map.zoom + 1)
                    MDSeparator:
                    MapViewToolBarButton:
                        icon: "magnify-minus"
                        on_release: map.on_zoom_button(map.zoom - 1)
    MDScreen:
        name: "search"
        SearchContent:
        
