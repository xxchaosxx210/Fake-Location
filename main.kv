#:import MapView kivy.garden.mapview.MapView
#:import get_color_from_hex kivy.utils.get_color_from_hex
#:include mockmapview.kv

<HorizontalSpacer@Widget>:
    size_hint_x: None
    width: "10dp"

<VerticalSpacer@Widget>:
    size_hint_y: None
    height: "10dp"
    size_hint_x: 1

Container:
    orientation: "vertical"
    mockmapview: map
    lat_text: latitude.text
    lon_text: longitude.text

    MDBoxLayout:
        orientation: "horizontal"
        size_hint: 1, .1
        HorizontalSpacer:
        MDTextField:
            id: latitude
            text: root.lat_text
            hint_text: "Latitude"
            input_filter: "float"
        HorizontalSpacer:
            width: "40dp"
        MDTextField:
            id: longitude
            text: root.lon_text
            hint_text: "Longitude"
            input_filter: "float"
        HorizontalSpacer:

    RelativeLayout:
        id: mapview_container

        MockMapView:
            id: map
        
        MDBoxLayout:
            orientation: "vertical"
            size_hint_x: None
            width: "48dp"
            pos_hint: {"right": 1, "top": 1}
            canvas.before:
                Color:
                    rgba: .8, .8, .8, 0
                Rectangle:
                    size: self.size
                    pos: self.pos
            MDRectangleFlatIconButton:
                icon: "crosshairs-gps"
                opposite_colors: True
                on_release: app.on_loc_button_released()
            VerticalSpacer:
            MDRectangleFlatIconButton:
                icon: "stop"
                opposite_colors: True
                on_release: app.on_stop_mock()
            VerticalSpacer:
            MDRectangleFlatIconButton:
                icon: "play"
                opposite_colors: True
                on_release: app.on_start_mock()
                theme_text_color: "Custom"
                md_bg_color: get_color_from_hex("#336699")
                text_color: get_color_from_hex("#ECF2F9")
            VerticalSpacer:
                size_hint: .5, 1
        
