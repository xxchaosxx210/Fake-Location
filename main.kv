#:import MapView kivy.garden.mapview.MapView
#:include mockmapview.kv

<HorizontalSpacer@Widget>:
    size_hint_x: None
    width: "10dp"

<VerticalSpacer@Widget>:
    size_hint_y: None
    height: "10dp"
    size_hint_x: 1

Container:
    orientation: "vertical"
    mockmapview: map
    lat_text: latitude.text
    lon_text: longitude.text

    MDBoxLayout:
        orientation: "horizontal"
        size_hint: 1, .1
        HorizontalSpacer:
        MDTextField:
            id: latitude
            text: root.lat_text
            hint_text: "Latitude"
            input_filter: "float"
        HorizontalSpacer:
            width: "40dp"
        MDTextField:
            id: longitude
            text: root.lon_text
            hint_text: "Longitude"
            input_filter: "float"
        HorizontalSpacer:

    VerticalSpacer:
        height: "2dp"

    MDBoxLayout:
        orientation: "horizontal"
        size_hint: 1, .1
        padding: "5dp"
        HorizontalSpacer:
            size_hint: .5, 1
        MDIconButton:
            icon: "crosshairs-gps"
            elevation: 5
            opposite_colors: True
            md_bg_color: 128/255, 204/255, 255/255, 1
            on_release: app.on_loc_button_released()
        HorizontalSpacer:
        MDIconButton:
            icon: "stop"
            opposite_colors: True
            md_bg_color: 200/255, 0, 0, 1
            on_release: app.on_stop_mock()
        HorizontalSpacer:
        MDIconButton:
            icon: "play"
            opposite_colors: True
            md_bg_color: 0, 200/255, 0, 1
            on_release: app.on_start_mock()
        HorizontalSpacer:
            size_hint: .5, 1

    VerticalSpacer:

    MockMapView:
        id: map
        size_hint: 1, .8
        
