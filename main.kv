#:import MapView kivy.garden.mapview.MapView
#:include mockmapview.kv

<HorizontalSpacer@Widget>:
    size_hint_x: None
    width: "10dp"

<VerticalSpacer@Widget>:
    size_hint_y: None
    height: "10dp"
    size_hint_x: 1

Container:
    orientation: "vertical"
    mockmapview: map
    lat_text: latitude.text
    lon_text: longitude.text

    MDBoxLayout:
        orientation: "horizontal"
        size_hint: 1, .1
        HorizontalSpacer:
        MDTextField:
            id: latitude
            text: root.lat_text
            hint_text: "Latitude"
            input_filter: "float"
        HorizontalSpacer:
            width: "40dp"
        MDTextField:
            id: longitude
            text: root.lon_text
            hint_text: "Longitude"
            input_filter: "float"
        HorizontalSpacer:

    VerticalSpacer:
        height: "2dp"

    VerticalSpacer:

    MockMapView:
        id: map
        size_hint: 1, 1
        pos_hint: {"x": 0, "bottom": 1}
        
