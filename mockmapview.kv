#:import MapView kivy.garden.mapview.MapView

<MockMapView>:
    lat: 10
    lon: 10
    zoom: 3
    on_zoom: self.zoom = 3 if self.zoom < 3 else self.zoom
    size_hint: 1, 1

    MDBoxLayout:
        size_hint: 1, 1
        canvas.before:
            Color:
                rgba: 1, 0, 0, 1
            Rectangle:
                pos: self.pos
                size: self.size
        id: mapview_toolbar
        orientation: "horizontal"
        MDIconButton:
            icon: "crosshairs-gps"
            elevation: 5
            opposite_colors: True
            md_bg_color: 128/255, 204/255, 255/255, 1
            on_release: app.on_loc_button_released()
        HorizontalSpacer:
        MDIconButton:
            icon: "stop"
            opposite_colors: True
            md_bg_color: 200/255, 0, 0, 1
            on_release: app.on_stop_mock()
        HorizontalSpacer:
        MDIconButton:
            icon: "play"
            opposite_colors: True
            md_bg_color: 0, 200/255, 0, 1
            on_release: app.on_start_mock()